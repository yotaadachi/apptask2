<!-- books一覧 -->
<table>
 <% if @range == '2' %>
 <h1 class="Result" style="padding-top: 60px;">Books search</h1>
 <thead>
  <tr>
   <th></th>
   <th>Title</th>
   <th></th>
   <th>Opinion</th>
  </tr>
 </thead>
 <tbody>
  <% @books.each do |book| %>
  <tr>
  	<td>
  		<%= attachment_image_tag(book.user, :profile_image, :fill, 30, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg") %>
  	</td>
  	<td><%= book.title %></td>
  	<td></td>
  	<td><%= book.body %></td>
  </tr>
  <% end %>
 </tbody>

 <% else %>

 <h1 class="Result" style="padding-top: 60px;">Users search</h1>
 <thead>
  <tr>
  	<th>image</th>
  	<th></th>
  	<th>name</th>
  	<th></th>
  </tr>
 </thead>
 <tbody>
  <% @users.each do |user| %>
  <tr>
  	<td><%= attachment_image_tag(user, :profile_image, :fill, 30, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg") %>
  	</td>
  	<td></td>
  	<td><%= user.name %></td>
  	<td><%= link_to "Show", user_path(user.id) %></td>
  </tr>
  <% end %>
 </tbody>
 <% end %>
</table>