<table class="book_comment">
 <% book.book_comments.each do |book_comment| %>
  <tr>
   <td><%= link_to user_path(book_comment.user) do %>
    <%= attachment_image_tag book_comment.user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
    <br><%= book_comment.user.name %></br>
    <% end %>
   </td>
   <td><%= book_comment.comment %></td>
   <% if book_comment.user.id == current_user.id %>
    <td>
     <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, "data-confirm" => "本当に消してもいいですか?", class: "btn btn-danger", remote: true %>
     <% end %>
    </td>
  </tr>
  <% end %>
</table>