<div class="container">
  <div class="row">
   <div class="col-xs-3">
    <%= render 'users/userinfo', user: @user %>
    <%= render 'books/newbook', book: @book_new %>
   </div>
　　<div class="col-xs-9">
	<h2 class="headline" style="padding-top: 20px;">Books</h2>
      <table class="table">
　     <thead>
　　   　<tr>
	     <th></th>
　　　    <th>Title</th>
　　　    <th>Opinion</th>
　　     </tr>
　      </thead>
      　<tbody>
          <% @books.each do |book| %>
　　     　<tr class="contents">
	       <td>
            <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
          </td>
　　　      <td>
             <%= link_to book_path(book) do %>
　　　         <%= book.title %>
             <% end %>
           </td>
　　　      <td><%= book.body %></td>
　　     　</tr>
          <% end %>
　　　　 </tbody>
　　　  </table>
   </div>
  </div>
 </div>
</div>