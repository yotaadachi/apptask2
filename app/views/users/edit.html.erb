<div class="container">
 <p id="notice"></p>
 <h2 class="user_edit" style="padding-top: 20px;">User info</h2>

 <%= form_for(@user) do |f| %>
  <label for="user_name">Name</label>
  <%= f.text_field :name %>
  <div class="row">
  <label for="user_image">Image</label>
  <div class="form-group has-icon">
   <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
   <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
  </div>
  </div>
  <div class="row">
  <label for="user_introduction">Introduction</label>
  <%= f.text_field :introduction %>
  </div>
  <div class="row">
  <%= f.submit "Update User" %>
 <% end %>
 </div>
</div>