<div class="container">
  <div class="row">
   <div class="col-xs-3">
    <%= render 'users/userinfo', user: @user %>
    <%= render 'books/newbook', book: @book_new %>
   </div>
　　<div class="col-xs-9">
	<p><strong>Title:</strong>
	<%= @book.title %>
    </p>
    <p><strong>Body:</strong>
	<%= @book.body %>
    </p>
   <%=link_to "Edit", edit_book_path(@book) %>
   <%=link_to "Back", books_path %>
   <% if flash[:notice] %>
    <div class="flash">
     <%= flash[:notice] %>
    </div>
   <% end %>
   </div>
</div>