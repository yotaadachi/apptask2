<div class="container">
  <div class="row">
   <div class="col-xs-3">
    <%= render 'users/userinfo', user: @user %>
    <%= render 'books/newbook', book: @book_new %>
   </div>
　　<div class="col-xs-9">
    <h2 class="headline" style="padding-top: 20px;">Book detail</h2>
    <table class="table">
     <thead>
     </thead>
     <tbody>
      <tr class="contents">
       <td>
           <%= link_to user_path(@user) do %>
            <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
            <br><%= @user.name %></br>
           <% end %>
       </td>
　　　  <td><%= @book.title %></td>
　　　  <td><%= @book.body %></td>
       <td>
           <% if @book.favorited_by?(current_user) %>
              <li>
              <%= link_to book_favorites_path(@book), method: :delete do %>
                <i class="fa fa-heart" aria-hidden="true" style="color: red;" ></i>
                <%= @book.favorites.count %>
              <% end %>
              </li>
           <% else %>
              <li>
              <%= link_to book_favorites_path(@book), method: :post do %>
                <i class="fa fa-heart" aria-hidden="true"></i>
                <%= @book.favorites.count %>
              <% end %>
              </li>
            <% end %>
       </td>
       <td>
           <% if @user.id == current_user.id %>
            <%= link_to "Edit", edit_book_path, class: "btn btn-success" %>
           <% end %>
       </td>
       <td>
           <% if @user.id == current_user.id %>
            <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消してもいいですか?", class: "btn btn-danger" %>
           <% end %>
        </td>
        <td>
           <p class="bookcomment-list">コメント数：<%= @book.book_comments.count %></p>
        </td>
　　   </tr>
     </tbody>
    </table>
    <% if flash[:notice] %>
     <div class="flash">
      <%= flash[:notice] %>
     </div>
    <% end %>
    <table class="book_comment">
        <% @book.book_comments.each do |book_comment | %>
        <tr>
          <td><%= link_to user_path(@user) do %>
           <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
           <br><%= book_comment.user.name %></br>
          <% end %></td>
          <td><%= book_comment.comment %></td>
          <% if @user.id == current_user.id %>
            <td><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, "data-confirm" => "本当に消してもいいですか?", class: "btn btn-danger" %>
            <% end %></td>
        </tr>
          <% end %>
        </table>
        <%= form_for [@book, @book_comment] do |f| %>
          <%= f.text_area :comment %>
          <%= f.submit "送信",　class: "btn btn-default" %>
        <% end %>
  </div>
  </div>
 </div>
</div>