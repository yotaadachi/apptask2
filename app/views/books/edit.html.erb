<div class="container">
 <p id="notice"></p>
 <h2>User info</h2>
 <%= form_for(@user) do |f| %>
  <label for="user_name">Name</label>
  <%= f.text_field :name %>
  <label for="user_image">Image</label>
  <%= f.text_field :"profile_image_id" %>
  <label for="user_introduction">Introduction</label>
  <%= f.text_field :introduction %>
  <%= f.submit "Update User" %>
 <% end %>
</div>